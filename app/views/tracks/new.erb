<section class="section-page">
  <div class="breadcrumb">
    <a href="/">Home</a>
    <a href="/tracks">Tracks</a>
    <a href="/track/new">Add Track</a>
  </div>

  <article class='single-form-container'>

    <% if session[:name] %>
      <header class="article-header">
        <h1>Add Track</h1>
      </header>

      <section class="article-body single-form">
        <div class="card">
          <div class="card-copy">
            <form method="POST" action="/tracks">
              <div>
              <label for='song_title'>Song Title: </label>
              <input type="text" name='song_title' id='song_title'>
              </div>

              <div>
              <label for='author'>Author: </label>
              <input type='text' name='author' id='author'>
              </div>

              <div>
              <label for='url'>Url: </label>
              <input type='text' name='url' id='url'>
              </div>

              <input type='submit' value='submit'>
            </form>
          </div>
        </div>
      </section>

    <% else %>

      <div class="single-form-container text-center">
        <div class="single-form">
          <h1>Join Music Wall</h1>
          <h2>Post tracks, for some reason.<br><a href="/signup">Signup today</a></h2>
          <form method='post' action='/' class='add-padding-large'>
            <h3>Current user login</h3>
            <div>
              <label for='email'>Email</label>
              <input type='text' name='email' id='email'>
            </div>
            <div>
              <label for='password'>Password</label>
              <input type="password" name='password' id='password'>
            </div>
            <input type="submit" value="login">
          </form>
          <small><a href="#">Terms and Conditions</a></small>
        </div>
      </div>  

    <% end %>


  </article>
</section>