<% if session[:name].nil? %>
  <form method='post' action='/'>
    <div>
      <label for='email'>Email: </label>
      <input type='text' name='email' id='email'>
    </div>
    <div>
      <label for='password'>Password: </label>
      <input type="password" name='password' id='password'>
    </div>
    <input type="submit" value="login">
  </form>
<% else %>

<div class="hero">
  <div class="hero-inner">
    <a href="" class="hero-logo"><img src="/images/logo-big.png" alt="Logo Image"></a>
    <div class="hero-copy">
      <h1>Welcome to Music Wall, <%= session[:name] %>.<br><a href='/tracks/new'>Get started</a> now!
    </div>
  </div>
</div>
  
<% end %>
